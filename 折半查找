#include<iostream>
#include<algorithm>
using namespace std;
//查找数并返回下标
int ErFen(int a[], int key)
{
	int left = 0;
	int right = 8;
	int mid;
	while (left <= right)
	{
		mid = (left + right) / 2;
		if (a[mid] > key)
		{
			right = mid-1;
		}
		else if(a[mid]<key)
		{
			left = mid+1;//防止死循环
		}
		else
		{
			return mid;
		}
	}
	return -1;
}
int main()
{
	int k = 8;
	//cin>>k;
	int a[9] = { 1,4,7,8,5,2,3,6,9 };
	sort(a, a + 9);
	cout << "排序后的数组：";
	for (int i = 0; i < 9; i++)
		cout << a[i] << " ";
	cout << endl;
	cout << ErFen(a, k);
	return 0;
}

#include<iostream>
using namespace std;
void swap(int* a, int* b)
{
	int tmp = *a;
	*a = *b;
	*b = tmp;
}

//挖坑法
void quicksort2(int* a, int left, int right)
{
	if (left >= right)
		return;
	int keyi = left;
	int key = a[keyi];
	int begin = left, end = right;
	while (begin < end)
	{
		while (begin < end && a[end] >= a[keyi])
		{
			end--;
		}
		a[keyi] = a[end];
		keyi = end;
		while (begin < end && a[begin] <= a[keyi])
		{
			begin++;
		}
		a[keyi] = a[begin];
		keyi = begin;
	}
	a[keyi] = key;
	quicksort2(a, left, keyi - 1);
	quicksort2(a, keyi + 1, right);

}
int main()
{
	int arr[] = { 1,4,7,8,5,2,3,6,9 };
	quicksort2(arr, 0, 8);
	for (auto e : arr)
	{
		cout << e << " ";
	}
	return 0;
}

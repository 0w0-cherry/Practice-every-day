#include<iostream>
using namespace std;

void swap(int* a, int* b)
{
    int tmp = *a;
    *a = *b;
    *b = tmp;
}
void Bisearch(int left, int right, int* a) {
    if (left >= right)
        return;

    int i = left, j = right;
    int keyi = left;

    while (i < j) {
        while (a[j] >=a[keyi] && i < j)//找小
            j--;
        while (a[i] <= a[keyi] && i < j)//找大
            i++;
        swap(&a[i], &a[j]);
    }
    swap(&a[keyi],& a[i]);

    keyi = i;
    Bisearch(left, keyi- 1, a);
    Bisearch(keyi + 1, right, a);
}

int main() {
    cout << "请输入数组元素：" << endl;
    int a[10] = {1,4,7,8,5,2,3,6,9,0};
    for (int i = 0; i < 10; i++) {
        printf("a[%d]=", i);
        scanf("%d", &a[i]);
    }

    Bisearch(0, 9, a);

    for (int i = 0; i < 10; i++) {
        cout << a[i] << " ";
    }


    return 0;
}

